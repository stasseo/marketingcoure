  <footer aria-label="Футер">
    <div class="wrap">
      <div class="foot">
        <div>
          <div style="display:flex; gap:10px; align-items:center; margin-bottom:6px;">
            <div class="logo" style="width:30px;height:30px;border-radius:12px" aria-hidden="true"></div>
            <div>
              <b style="color:rgba(234,240,255,.92)">Digital Marketing Academy</b><br/>
              <span>© <span id="year"></span> • SMM • PPC • SEO</span>
            </div>
          </div>
          <span>Матеріали на сторінці — демо. Замініть на реальні дані, контакти та посилання політик.</span>
        </div>

        <div>
          <b style="color:rgba(234,240,255,.9)">Контакти</b><br/>
          <a href="mailto:hello@example.com">hello@example.com</a><br/>
          <a href="tel:+380000000000">+38 (000) 000 00 00</a>
        </div>

        <div>
          <b style="color:rgba(234,240,255,.9)">Навігація</b><br/>
          <a href="#courses" data-scroll>Курси</a><br/>
          <a href="#faq" data-scroll>FAQ</a><br/>
          <a href="#register" data-scroll>Реєстрація</a>
        </div>
      </div>
    </div>
  </footer>

  <script>
    (function () {
      const $ = (sel, root=document) => root.querySelector(sel);
      const $$ = (sel, root=document) => Array.from(root.querySelectorAll(sel));

      // Year
      $("#year").textContent = new Date().getFullYear();

      // Seats indicator (demo)
      const seatsKey = "dma_seats_left";
      let seats = Number(localStorage.getItem(seatsKey));
      if (!Number.isFinite(seats) || seats <= 0) {
        // pseudo-random stable-ish demo value
        const base = 24;
        const day = new Date().getDate();
        seats = Math.max(6, base - (day % 10));
        localStorage.setItem(seatsKey, String(seats));
      }
      $("#seatsLeft").textContent = seats + " left";

      // Smooth scroll for internal links (respect reduced motion)
      const prefersReduced = window.matchMedia && window.matchMedia("(prefers-reduced-motion: reduce)").matches;
      $$('a[data-scroll]').forEach(a => {
        a.addEventListener('click', (e) => {
          const href = a.getAttribute('href') || "";
          if (!href.startsWith("#")) return;
          const target = document.getElementById(href.slice(1));
          if (!target) return;
          e.preventDefault();
          target.scrollIntoView({ behavior: prefersReduced ? "auto" : "smooth", block: "start" });
          history.replaceState(null, "", href);
        });
      });

      // Persist track selection across forms
      const trackKey = "dma_selected_track";
      function syncTrack(value){
        if (!value) return;
        localStorage.setItem(trackKey, value);
        // apply to both selects if present
        const selects = [
          $("#learnForm select[name='track']"),
          $("#registerForm select[name='track']")
        ].filter(Boolean);
        selects.forEach(s => { s.value = value; });
      }

      // preload saved track
      const savedTrack = localStorage.getItem(trackKey);
      if (savedTrack) syncTrack(savedTrack);

      // when any track changes, sync
      ["learnForm", "registerForm"].forEach(id => {
        const form = document.getElementById(id);
        if (!form) return;
        const sel = form.querySelector("select[name='track']");
        if (!sel) return;
        sel.addEventListener("change", () => syncTrack(sel.value));
      });

      // Basic validation helpers
      function showToast(el, msg, isError=false){
        el.textContent = msg;
        el.classList.toggle("err", !!isError);
        el.style.display = "block";
      }
      function hideToast(el){
        el.style.display = "none";
        el.classList.remove("err");
        el.textContent = "";
      }

      function validateForm(form){
        // Use native validation but show custom messages if needed
        const inputs = $$("input, select, textarea", form);
        let ok = true;

        inputs.forEach(inp => {
          inp.setCustomValidity("");
          if (inp.required && !inp.value.trim()){
            ok = false;
          }
          // custom: minlength for textarea / name
          const min = inp.getAttribute("minlength");
          if (min && inp.value.trim().length > 0 && inp.value.trim().length < Number(min)){
            ok = false;
          }
          // custom: pattern
          const pat = inp.getAttribute("pattern");
          if (pat && inp.value.trim().length > 0){
            try{
              const re = new RegExp(pat);
              if (!re.test(inp.value.trim())) ok = false;
            }catch(_e){}
          }
          // email basic
          if (inp.type === "email" && inp.value.trim().length > 0){
            const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!re.test(inp.value.trim())) ok = false;
          }
        });

        if (!ok){
          // Focus first invalid element
          const firstInvalid = inputs.find(inp => {
            const v = inp.value.trim();
            if (inp.required && !v) return true;
            const min = inp.getAttribute("minlength");
            if (min && v && v.length < Number(min)) return true;
            const pat = inp.getAttribute("pattern");
            if (pat && v){
              try{
                const re = new RegExp(pat);
                if (!re.test(v)) return true;
              }catch(_e){}
            }
            if (inp.type === "email" && v){
              const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
              if (!re.test(v)) return true;
            }
            return false;
          });
          if (firstInvalid) firstInvalid.focus();
        }
        return ok;
      }

      // Mock submit (learn)
      const learnForm = document.getElementById("learnForm");
      const learnToast = document.getElementById("learnToast");
      if (learnForm){
        learnForm.addEventListener("submit", (e) => {
          e.preventDefault();
          hideToast(learnToast);

          if (!validateForm(learnForm)){
            showToast(learnToast, "Перевірте поля: імʼя, email та оберіть трек.", true);
            return;
          }

          const data = Object.fromEntries(new FormData(learnForm).entries());
          // demo storage
          localStorage.setItem("dma_learn_lead", JSON.stringify({ ...data, ts: Date.now() }));
          showToast(learnToast, "Готово! Запит отримано. Ми надішлемо програму та деталі на email (демо).");

          // keep track, do not clear track
          learnForm.reset();
          const track = localStorage.getItem(trackKey);
          if (track) syncTrack(track);
        });

        $("#fillDemoLearn")?.addEventListener("click", () => {
          learnForm.name.value = "Олена";
          learnForm.email.value = "olena@example.com";
          learnForm.track.value = "SEO";
          learnForm.message.value = "Потрібен курс SEO для росту органічного трафіку та структури контенту.";
          syncTrack("SEO");
          learnForm.name.focus();
        });
      }

      // Mock submit (register)
      const regForm = document.getElementById("registerForm");
      const regToast = document.getElementById("regToast");
      if (regForm){
        regForm.addEventListener("submit", (e) => {
          e.preventDefault();
          hideToast(regToast);

          if (!validateForm(regForm)){
            showToast(regToast, "Заповніть обовʼязкові поля: імʼя, телефон, email, трек, рівень та ціль.", true);
            return;
          }

          const data = Object.fromEntries(new FormData(regForm).entries());
          localStorage.setItem("dma_registration", JSON.stringify({ ...data, ts: Date.now() }));

          // decrement seats (demo)
          seats = Math.max(0, seats - 1);
          localStorage.setItem(seatsKey, String(seats));
          $("#seatsLeft").textContent = seats + " left";

          showToast(regToast, "Реєстрацію підтверджено (демо). Ми звʼяжемось із вами найближчим часом.");

          regForm.reset();
          const track = localStorage.getItem(trackKey);
          if (track) syncTrack(track);
        });

        $("#fillDemoRegister")?.addEventListener("click", () => {
          regForm.name.value = "Андрій";
          regForm.phone.value = "+380 67 123 45 67";
          regForm.email.value = "andrii@example.com";
          regForm.track.value = "PPC";
          regForm.level.value = "Beginner";
          regForm.goal.value = "Хочу навчитися будувати структуру кампаній і оптимізувати CPA/ROAS на практиці.";
          syncTrack("PPC");
          regForm.name.focus();
        });
      }

      // Auto-close other FAQ items when opening one (optional UX)
      const faq = document.querySelector(".faq");
      if (faq){
        const items = $$("details", faq);
        items.forEach(d => {
          d.addEventListener("toggle", () => {
            if (!d.open) return;
            items.forEach(other => { if (other !== d) other.open = false; });
          });
        });
      }
    })();
  </script>
</body>
</html>
